{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=ClinicDb;Trusted_Connection=True;TrustServerCertificate=True"
  },

  "JWT": {
    "Issuer": "https://localhost:7174/",
    "Audience": "https://localhost:7174/",
    "LifeTime": 30,
    "SigningKey": "dafdfa$$$5afdfdafa4545454fad5s45454fa"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information", // المستوى الافتراضي لكل الـ logs هيكون "Information"
      "Override": {
        "Microsoft": "Information", // الـ logs اللي جاية من الـ Framework بتاع مايكروسوفت هتكون "Warning" أو أعلى
        "System": "Information", // نفس الكلام لـ logs الـ System
        "Microsoft.AspNetCore": "Information" // ونفس الكلام لـ logs الـ ASP.NET Core
      }
    },
    "Using": [
      // بنعرف Serilog إننا هنستخدم الـ sinks دي
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "WriteTo": [
      {
        "Name": "Console", // الـ sink اللي بتطلع الـ logs على الـ console
        "Args": {
          // ده الـ template بتاع شكل الـ log اللي هيطلع في الـ console
          // {Message:lj} دي مهمة عشان لو عندك properties هتطلع في شكل JSON لو كانت object
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File", // الـ sink اللي بتطلع الـ logs في ملف
        "Args": {
          "path": "logs/api-log-.json", // مسار الملف (مهم يتطابق مع اللي في Program.cs)
          "rollingInterval": "Day", // ملف جديد كل يوم
          // الـ formatter ده بيخلي الـ logs تتسجل في الملف كـ JSON Object
          // ده بيخليها سهلة جداً للقراءة والتحليل بواسطة أدوات الـ logging
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    // دول بيضيفوا خصائص إضافية مفيدة لكل log entry (زي اسم الجهاز، الـ Process ID، والـ Thread ID)
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    // دي خاصية ثابتة هتتضاف لكل الـ logs عشان تعرفي إنها جاية من الـ API ده
    "Properties": {
      "ApplicationName": "MyAwesomeApi"
    }
  }


}
